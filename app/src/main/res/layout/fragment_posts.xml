<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray"
    tools:context=".ui.fragment.navigationcycle.PostFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dim_m"
        android:layout_marginTop="@dimen/dim_28dp"
        android:layout_marginEnd="@dimen/dim_m"
        android:background="@drawable/rounder_layout"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/activity_cycle_navigationdrawer_spn_catg"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dim_ss"
            android:layout_marginTop="@dimen/two"
            android:paddingTop="@dimen/one"
            android:paddingBottom="@dimen/one" />

        <android.support.design.widget.TextInputEditText
            android:id="@+id/activity_cycle_navigationdrawer_ed_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/zero"
            android:background="@null"
            android:hint="write search word you want here "
            android:textColor="@color/textviewscolor"
            android:textSize="@dimen/dim_l" />

        <ImageView
            android:id="@+id/activity_cycle_navigationdrawer_img_search"
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:layout_marginStart="@dimen/dim_s"
            android:src="@drawable/search_icon" />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/activity_cycle_navigationdrawer_recylerview_el"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/eight"
        android:layout_marginTop="@dimen/twenty">

    </android.support.v7.widget.RecyclerView>


</LinearLayout>