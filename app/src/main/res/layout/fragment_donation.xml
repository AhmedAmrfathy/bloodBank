<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:orientation="vertical"
    tools:context=".ui.fragment.navigationcycle.DonationFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_4xl"
        android:background="@color/gray">
        <RelativeLayout
            android:id="@+id/DonationFragment_rellay_1"
            android:layout_width="@dimen/dim_23xl"
            android:layout_height="@dimen/dim_3xl"
            android:layout_marginStart="@dimen/dim_s"
            android:layout_marginTop="@dimen/dim_s"
            android:layout_marginEnd="@dimen/two"
            android:layout_marginBottom="@dimen/dim_s"
            android:background="@drawable/rounder_layout">



            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/DonationFragment_spn_bloodtype"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dim_s"
               android:layout_centerInParent="true"></android.support.v7.widget.AppCompatSpinner>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/DonationFragment_rellay_2"
            android:layout_width="@dimen/dim_23xl"
            android:layout_height="@dimen/dim_3xl"
            android:layout_marginStart="@dimen/dim_s"
            android:layout_marginTop="@dimen/dim_s"
            android:layout_marginEnd="@dimen/two"
            android:layout_marginBottom="@dimen/dim_s"
            android:layout_toEndOf="@+id/DonationFragment_rellay_1"
            android:background="@drawable/rounder_layout">

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/DonationFragment_spn_city"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dim_s"
                android:layout_centerInParent="true"></android.support.v7.widget.AppCompatSpinner>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="@dimen/dim_3xl"
            android:layout_height="@dimen/dim_3xl"
            android:layout_marginStart="@dimen/two"
            android:layout_marginTop="@dimen/dim_s"
            android:layout_toEndOf="@+id/DonationFragment_rellay_2"
            android:background="@drawable/circle">

            <ImageView
                android:id="@+id/DonationFragment_img_searchdonation"
                android:layout_width="@dimen/onenine"
                android:layout_height="@dimen/onenine"
                android:layout_centerInParent="true"
                android:background="@drawable/search_icon" />
        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/DonationFragment_rc_reguests"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/eight"
            android:layout_marginTop="@dimen/twenty">
        </android.support.v7.widget.RecyclerView>
        <ImageView
            android:id="@+id/DonationFragment_img_adddonation"
            android:layout_width="@dimen/dim_6xl"
            android:layout_height="@dimen/dim_6xl"
            android:background="@drawable/add"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/dim_xl"
            android:layout_marginBottom="@dimen/dim_5xl"
            android:layout_alignParentBottom="true"
            />

    </RelativeLayout>
    



</LinearLayout>